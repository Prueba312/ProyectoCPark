@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<h2>Lista de Roles</h2>

<section class="col-sm-6">
    <table class="table-bordered">
        @Html.ActionLink("Crear un nuevo rol", "Create", "Roles")
    </table>
</section>

<section class="col-sm-6">
    <table class="table-bordered">
        @Html.ActionLink("Asigne un rol a un usuario", "RegisterRole", "Account")
    </table>
</section>

<br/>

<table class="table table-bordered table-hover">
    <tr>
        <th class="c">
            Nombre del Role
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="c">
                @item.Name
            </td>
        </tr>
    }
</table>

